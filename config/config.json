{
    "postgres": {
        "host": "localhost",
        "port": 5432,
        "database": "message_queue_db",
        "user": "postgres",
        "password": "postgres",
        "ssl_mode": "disable"
     },

    "listener": {
        "channels": [
            "queue_message_log"
        ]
    },

    "rabbitmq": {
        "url": "amqp://guest:guest@localhost:5672/",

        "queue": {
            "name": "message_queue",
             "durable": true,
            "auto_delete": false,
             "exclusive": false,
             "no_wait": false
        },

        "retry": {
        "buffer_size": 100,
        "retry_delay_sec": 2,
        "idle_sleep_ms": 500
        }
    }
}
